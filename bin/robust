#!/usr/bin/env bash
# Original code by Dave Coyle (http://coyled.com)
# Tweaks by Gwyneth Llewelyn (http://gwynethllewelyn.net/)
# Total overhaul by lickx (https://github.com/lickx)

# Requires bash 4

# Get the root folder of the isthmus tree
export OPENSIM_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

if [ ! -r "${OPENSIM_DIR}/etc/robust.ini" ]; then
    echo "Grid services for this grid are not self-hosted but provided by a 3rd party"
    exit
fi

export DOTNET_CLI_TELEMETRY_OPTOUT=1

LOGFILE="${OPENSIM_DIR}/var/log/isthmus.log"
mkdir -p "${OPENSIM_DIR}/var/log"
mkdir -p "${OPENSIM_DIR}/var/fsassets"
mkdir -p "${OPENSIM_DIR}/var/pid/robust"

# Install isthmus config file if not already there, and then source it
if [ ! -f "${OPENSIM_DIR}/etc/isthmus.conf" ]; then
    cp "${OPENSIM_DIR}/share/common/etc/isthmus.conf" "${OPENSIM_DIR}/etc"
fi
source "${OPENSIM_DIR}/etc/isthmus.conf"

export ISTHMUS_HOSTNAME
export ROBUST_LOGFILE="${OPENSIM_DIR}/var/log/robust.log"
export ROBUST_STATS_LOGFILE="${OPENSIM_DIR}/var/log/robust_stats.log"
export ROBUST_PIDFILE="${OPENSIM_DIR}/var/pid/robust/robust.pid"

# Mono optimizations
export MONO_GC_PARAMS="nursery-size=32m,minor=split,promotion-age=14"
export MONO_THREADS_PER_CPU=300

show_help() {
    echo -e "`basename $0` - Control grid services\n"
    echo "start               Start robust"
    echo "stop                Stop robust"
    echo "kill                Stop by sending SIGHUP (unclean)"
    echo "restart             Issues a stop, then start command"
    echo "status              Returns status"
}

do_log() {
    logline="`date` - $1"
    echo $logline >> $LOGFILE
}

check_user() {
    if [ `whoami` == 'root' ]; then
        echo "Refusing to run as root"
        exit 1
    fi
}

is_running() {
    SCREENPID=`${SCREEN} -ls ${SCREENNAME} | grep -P "${SCREENNAME}\t" | cut -f1 -d'.' | sed 's/W//g'`
    if [ "${SCREENPID}" != "" ]; then
        return 0
    else
        return 1
    fi
}

get_status() {
    if is_running; then
        echo "[${SCREENNAME}] is online"
        exit 1
    else
        echo "[${SCREENNAME}] is offline"
        exit 0 
    fi
}

setup() {
    mkdir -p "${OPENSIM_DIR}/var/log"
    export ROBUST_LOGFILE="${OPENSIM_DIR}/var/log/robust.log"

    mkdir -p "${OPENSIM_DIR}/var/pid/robust"
    export ROBUST_PIDFILE="${OPENSIM_DIR}/var/pid/robust/robust.pid"

    SCREENNAME="`basename ${OPENSIM_DIR}`-ROBUST"
}

do_start() {
    if [ ! -r "${OPENSIM_DIR}/etc/robust.ini" ]; then
        echo "etc/robust.ini does not exist"
        exit 1
    fi

    if is_running; then
        echo "[${SCREENNAME}] Already started"
        exit 1
    fi

    export LANG=C
    ulimit -n 4096
    cd "${OPENSIM_DIR}/runtime/bin" && ${SCREEN} -S ${SCREENNAME} -d -m -l \
        ./Robust -inifile="${OPENSIM_DIR}/etc/robust.ini"

    echo -n "[${SCREENNAME}] Starting"
    STARTTIME=0
    while :
    do
        sleep 5
        STARTTIME=$((STARTTIME + 5))
        echo -n "."
        if is_running; then
            echo " started"
            exit 0
        elif [ ${STARTTIME} -ge 30 ]; then
            echo " failed!"
            do_log "[${SCREENNAME}] Robust has problems with starting"
            exit 1
        fi
    done
}

do_kill() {
    if is_running; then
        PID="${OPENSIM_DIR}/var/Robust.exe.pid"
        if [ -f ${ROBUST_PIDFILE} ]; then
            kill -9 `cat ${ROBUST_PIDFILE}`
            rm ${ROBUST_PIDFILE}
            echo "[${SCREENNAME}] Killed"
        fi
    fi
}

do_stop() {
    if is_running; then
        echo -n "[${SCREENNAME}] Stopping"
        ${SCREEN} -r ${SCREENPID}.${SCREENNAME} -X exec .\!\! echo "\nquit"
        STOPTIME=0
        while :
        do
            sleep 5
            STOPTIME=$((STOPTIME + 5))
            echo -n "."
            if ! is_running; then
                echo " stopped"
                return 0
            elif [ ${STOPTIME} -ge 120 ]; then
                echo " killing"
                do_kill
                do_log "[${SCREENNAME}] Robust took a long time to shutdown"
                return 1
            fi
        done
    else
        echo "[${SCREENNAME}] Not running"
        exit 1
    fi
}

check_user
setup
case "$1" in
    start)
        do_start
        ;; 
    stop)
        do_stop
        ;;
    kill)
        do_kill
        ;;
    restart)
        do_stop
        # Take time for the pid file to clear
        sleep 1
        do_start
        ;;
    status)
        get_status
        ;;
    *)
        show_help
        exit 1
        ;;
esac

